[user]
	name = htlsne
	email = htlsne23@gmail.com
[push]
	default = simple
[alias]
	st = status
	ca = commit -a
	di = diff
	dic = diff --cached
	co = checkout
	cm = commit
  sw = switch
  rs = restore
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
[url "git@github.com:"]
	pushInsteadOf = https://github.com/
[include]
  path = .gitconfig.os
[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only
[diff]
	algorithm = histogram
  colorMoved = default
	tool = nvimdiff
[merge]
	tool = nvimdiff
	conflictstyle = diff3
[delta]
  navigate = true
  syntax-theme = Nord
  line-numbers = true
  side-by-side = true
